<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
    crossorigin="anonymous">
    
    <title>Recipe</title>
</head>
<body>
   <div class="container"> 
       <h1 class="mb-4"> User Recipes </h1>
       <a href= "/recipes/new" class= "btn btn-success"> New Recipe </a>

       <!-- loops through the recipes objects from server.js -->
       <% recipes.forEach(recipe => { %>
            <div class= "card mt-4"> 
                <div class="card-body"> 
                        <h4 class="card-title"> <%= recipe.title %></h4>
                        <div class="card-subtitle text-muted mb-2">  
                            <%= recipe.date.toLocaleDateString() %>
                        </div>
                </div>
                <div class="card-text mb-2"> <%= recipe.description %>
            </div>
       <%}) %>
   </div>
</body>
</html>